<UserControl x:Class="SilkySouls2.Views.Tabs.EnemyTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SilkySouls2.Views.Tabs"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,5">
            <StackPanel Margin="5">
                <TextBlock Text="Global Enemy Options"
                           FontWeight="Bold"
                           Margin="0,0,0,5" />

                <UniformGrid Columns="1">
                    <CheckBox Content="Disable AI"
                              IsChecked="{Binding IsAllDisableAiEnabled}"
                              Margin="0,2" />
                    <!-- -->
                    <!-- <CheckBox Content="All Repeat Action" -->
                    <!--           IsChecked="{Binding IsAllRepeatActEnabled}" -->
                    <!--           Margin="0,2" /> -->
                </UniformGrid>
            </StackPanel>
        </Border>

        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,5,0,5">
            <Grid Margin="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

         
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Elana"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#F0F0F0"
                               Margin="0,0,0,5" />

                    <TextBlock Text="Summon RNG"
                               FontSize="12"
                               Foreground="#B0B0B0"
                               Margin="0,0,0,8" />

                    <CheckBox Content="Pigs"
                              IsChecked="{Binding IsPigSummonsEnabled}"
                              Margin="0,2" />
                    <CheckBox Content="Skellies"
                              IsChecked="{Binding IsSkellySummonsEnabled}"
                              Margin="0,2" />
                    <CheckBox Content="Velstadt"
                              IsChecked="{Binding IsVelstadtSummonEnabled}"
                              Margin="0,2" />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <Button Content="Placeholder Button 1"
                 
                            Margin="0,0,0,5"
                            Padding="10,5" />
                    <Button Content="Placeholder Button 2"
                            Padding="10,5" />
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <Button Content="Placeholder Button 3"
                            Margin="0,0,0,5"
                            Padding="10,5" />
                    <Button Content="Placeholder Button 4"
                            Padding="10,5" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,5,0,5">
            <StackPanel Margin="15,10">
                <TextBlock Text="Mad Warrior"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#F0F0F0"
                           Margin="0,0,0,10" />
                
                <StackPanel Orientation="Horizontal">
                    <CheckBox Content="Show Mad Warrior Spawn"
                              IsChecked="{Binding IsMadWarriorSpawnEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,10,0" />
                    <TextBlock Text="{Binding MadWarriorStatusText}"
                               Foreground="{Binding MadWarriorStatusColor}"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               Visibility="{Binding IsMadWarriorSpawnEnabled, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="3"
                IsEnabled="{Binding IsScholar}"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,5,0,0">
            <StackPanel Margin="15,10,0,0">
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Forlorn"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#F0F0F0" />

                    <CheckBox Grid.Column="2"
                              Content="Guaranteed Spawn"
                              IsEnabled="{Binding IsForlornAvailable}"
                              IsChecked="{Binding IsGuaranteedSpawnEnabled}"
                              VerticalAlignment="Center"
                              Margin="0,0,6,0" />

                    <Border Grid.Column="3"
                            Background="#3498db"
                            CornerRadius="10"
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Margin="0,0,6,0"
                            ToolTip="Select the forlorn that you want and reload the area by warping&#x0A;&#x0A;For spawning Forlorn in forest of the fallen giants, set the King's Ring flag in the Events tab"
                            ToolTipService.InitialShowDelay="100">
                        <TextBlock Text="i"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </Border>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Select Location:"
                               VerticalAlignment="Center"
                               Width="100"
                               Margin="0,0,5,0" />
                    <ComboBox Width="150"
                              ItemsSource="{Binding AvailableForlornAreas}"
                              SelectedItem="{Binding SelectedForlornArea}"
                              DisplayMemberPath="AreaName" />
                    <Button
                        IsEnabled="{Binding AreOptionsEnabled}"
                        Click="SpawnForlorn"
                        Content="Force Spawn"
                        Margin="80,0,0,0">
                        
                    </Button>
                    
                    <Border
                            Background="#3498db"
                            CornerRadius="10"
                            Width="14"
                            Height="14"
                            VerticalAlignment="Center"
                            Margin="5,0,0,0"
                            ToolTip="Force Forlorn to spawn without having to reload the area, requires you to be in the correct area."
                            ToolTipService.InitialShowDelay="100">
                        <TextBlock Text="i"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   FontSize="10" />
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="Select Spawn:"
                               VerticalAlignment="Center"
                               Width="100"
                               Margin="0,0,5,0" />
                    <ComboBox Width="150"
                              IsEnabled="{Binding IsForlornAvailable}"
                              ItemsSource="{Binding ForlornIndexes, IsAsync=False}"
                              SelectedIndex="{Binding SelectedForlornIndex}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
