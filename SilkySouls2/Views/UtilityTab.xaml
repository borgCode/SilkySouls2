<UserControl x:Class="SilkySouls2.Views.UtilityTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:converters="clr-namespace:SilkySouls2.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="500">

    <UserControl.Resources>
        <converters:BooleanAndConverter x:Key="BooleanAndConverter" />
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,5">
            <TabControl Margin="5">
                <TabItem Header="General">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,3" VerticalAlignment="Center">
                            <CheckBox Content="Skip Ivory Gank"
                                      IsChecked="{Binding IsIvorySkipEnabled}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,20,0" />
                            <CheckBox Content="Skip Credits"
                                      IsChecked="{Binding IsCreditSkipEnabled}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,20,0" />
                            <CheckBox Content="100% Drop Rate"
                                      IsChecked="{Binding Is100DropEnabled}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,20,0" />
                            <Button Content="Force Save"
                                    IsEnabled="{Binding AreButtonsEnabled}"
                                    Padding="5,3"
                                    Click="ForceSave_Click"
                                    Margin="0,0,20,0" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                            <xctk:DoubleUpDown x:Name="SpeedUpDown"
                                               Value="{Binding GameSpeed}"
                                               TextAlignment="Center"
                                               Width="80"
                                               Minimum="0"
                                               Maximum="5"
                                               Increment="0.50"
                                               FormatString="F2"
                                               BorderBrush="#3F3F46" />
                            <TextBlock Text="Game Speed" VerticalAlignment="Center" Margin="10,0,0,0" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                            <CheckBox Content="Unlock Fps"
                                      IsChecked="{Binding IsDbgFpsEnabled}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,20,0" />
                            <xctk:DoubleUpDown x:Name="FpsUpDown"
                                               Value="{Binding Fps}"
                                               TextAlignment="Center"
                                               Width="80"
                                               Minimum="5"
                                               Maximum="140"
                                               Increment="1"
                                               FormatString="F0"
                                               IsEnabled="{Binding IsDbgFpsEnabled}"
                                               BorderBrush="#3F3F46" />
                        </StackPanel>
                    </StackPanel>
                </TabItem>

                <TabItem Header="No Clip">
                    <StackPanel Margin="10">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <CheckBox Content="No Clip"
                                      IsChecked="{Binding IsNoClipEnabled}"
                                      IsEnabled="{Binding AreButtonsEnabled}"
                                      VerticalAlignment="Center"
                                      Margin="0,0,5,0" />

                            <Border
                                Background="#3498db"
                                CornerRadius="10"
                                Width="12"
                                Height="12"
                                Margin="5,0,10,0"
                                VerticalAlignment="Center"
                                ToolTip="Vertical movement with Ctrl/Space or L2/R2 on controller"
                                ToolTipService.InitialShowDelay='100'>
                                <TextBlock Text="i"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="10" />
                            </Border>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <xctk:DoubleUpDown x:Name="NoClipSpeedUpDown"
                                               Value="{Binding NoClipSpeed}"
                                               TextAlignment="Center"
                                               Width="80"
                                               Minimum="0.05"
                                               Maximum="5.0"
                                               Increment="0.50"
                                               FormatString="F2"
                                               IsEnabled="{Binding IsNoClipEnabled}"
                                               BorderBrush="#3F3F46" />
                            <TextBlock Text="Speed" VerticalAlignment="Center" Margin="5,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Camera">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <CheckBox Content="Free Cam"
                                          IsChecked="{Binding IsFreeCamEnabled}"
                                          IsEnabled="{Binding AreButtonsEnabled}"
                                          Margin="0,0,0,0"
                                          VerticalAlignment="Center" />

                                <Border
                                    Background="#3498db"
                                    CornerRadius="10"
                                    Width="12"
                                    Height="12"
                                    Margin="5,0,10,0"
                                    VerticalAlignment="Center"
                                    ToolTip="Only works with controller for now&#x0a;&#x0a;Mode 1: Freezes both the player and enemies&#x0a;Mode 2: Does not freeze"
                                    ToolTipService.InitialShowDelay='100'>
                                    <TextBlock Text="i"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"
                                               FontSize="10" />
                                </Border>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        IsEnabled="{Binding IsFreeCamEnabled}"
                                        VerticalAlignment="Center"
                                        Margin="20,0,0,5">
                                <RadioButton Content="Mode 1"
                                             GroupName="FeatureModes"
                                             IsChecked="{Binding IsFreeCamMode1Selected}"
                                             Margin="0,0,10,0" />
                                <RadioButton Content="Mode 2"
                                             GroupName="FeatureModes"
                                             IsChecked="{Binding IsFreeCamMode2Selected}"
                                             Margin="0,0,10,0" />
                            </StackPanel>

                            <Button Content="Move Free Cam to Player"
                                    IsEnabled="{Binding IsFreeCamEnabled}"
                                    Padding="5,0"
                                    Margin="20,0,0,5"
                                    HorizontalAlignment="Left" />
                            <CheckBox Content="Death Cam"
                                      IsChecked="{Binding IsDeathCamEnabled}"
                                      IsEnabled="{Binding AreButtonsEnabled}"
                                      VerticalAlignment="Center"
                                      Margin="0,5,0,0" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                            <CheckBox Content="Increase Camera Vertical limits"
                                      VerticalAlignment="Center"
                                      IsEnabled="{Binding IsFreeCamEnabled, Converter={StaticResource InverseBooleanConverter}}"
                                      IsChecked="{Binding IsCamVertIncreaseEnabled}"
                                      Margin="0,0,0,15" />

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8"
                                        IsEnabled="{Binding IsFreeCamEnabled, Converter={StaticResource InverseBooleanConverter}}">
                                <xctk:IntegerUpDown x:Name="FovUpDown"
                                                    Value="{Binding CameraFov}"
                                                    TextAlignment="Center"
                                                    Width="80"
                                                    Minimum="5"
                                                    Maximum="140"
                                                    Increment="1"
                                                    IsEnabled="{Binding AreButtonsEnabled}"
                                                    BorderBrush="#3F3F46" />
                                <TextBlock Text="Field of View" VerticalAlignment="Center" Margin="10,0,0,0" />
                            </StackPanel>

                            <Button Content="Set Default FOV"
                                    HorizontalAlignment="Right"
                                    Padding="5,2"
                                    Margin="0,0,0,0"
                                    Width="100">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource BooleanAndConverter}">
                                        <Binding Path="AreButtonsEnabled" />
                                        <Binding Path="IsFreeCamEnabled"
                                                 Converter="{StaticResource InverseBooleanConverter}" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </Border>

        <Border Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#333"
                CornerRadius="3"
                Margin="0,0,0,5">
            <StackPanel Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Draw"
                               Grid.Column="0" />
                </Grid>

                <Grid Margin="20,5,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    
                    <CheckBox Content="Draw hitbox"
                              IsChecked="{Binding IsDrawHitboxEnabled}"
                              Grid.Column="0" Grid.Row="0"
                              Margin="0,2" />

                    <CheckBox Content="Draw Events"
                              IsChecked="{Binding IsDrawEventEnabled}"
                              Grid.Column="0" Grid.Row="1"
                              Margin="0,2" />

                    <CheckBox Content="Player Sound"
                              IsChecked="{Binding IsDrawSoundEnabled}"
                              Grid.Column="0" Grid.Row="2"
                              Margin="0,2" />

                    <CheckBox Content="Enemy Targeting View"
                              IsChecked="{Binding IsTargetingViewEnabled}"
                              Grid.Column="0" Grid.Row="3"
                              Margin="0,2" />
                    
                    <CheckBox Content="Hide Map"
                              IsChecked="{Binding IsHideMapEnabled}"
                              Grid.Column="1" Grid.Row="0"
                              Margin="0,2" />

                    <CheckBox Content="Hide Characters"
                              IsChecked="{Binding IsHideCharactersEnabled}"
                              Grid.Column="1" Grid.Row="1"
                              Margin="0,2" />

                    <CheckBox Content="Hide Sfx"
                              IsChecked="{Binding IsHideSfxEnabled}"
                              Grid.Column="1" Grid.Row="2"
                              Margin="0,2" />
                    
                    <CheckBox Content="Draw Collision"
                              IsChecked="{Binding IsDrawCollisionEnabled}"
                              Grid.Column="2" Grid.Row="0"
                              Margin="0,2" />

                    <CheckBox Content="Wireframe"
                              IsChecked="{Binding IsColWireframeEnabled}"
                              IsEnabled="{Binding IsDrawCollisionEnabled}"
                              Grid.Column="2" Grid.Row="1"
                              Margin="15,2,0,2" />

                    <CheckBox Content="Draw Killbox"
                              IsChecked="{Binding IsDrawKillboxEnabled}"
                              Grid.Column="2" Grid.Row="2"
                              Margin="0,2" />

                    <CheckBox Content="Draw Ragdolls"
                              IsChecked="{Binding IsDrawRagdollsEnabled}"
                              Grid.Column="2" Grid.Row="3"
                              Margin="0,2" />

                    <CheckBox Content="See Through Walls"
                              IsChecked="{Binding IsSeeThroughWallsEnabled}"
                              IsEnabled="{Binding IsDrawRagdollsEnabled}"
                              Grid.Column="2" Grid.Row="4"
                              Margin="15,2,0,2" />
                </Grid>
            </StackPanel>
        </Border>
        <Button Content="Inject"
                Click="Inject_Dll"
                Grid.Row="2"
                Margin="0,2" />
    </Grid>
</UserControl>